extends layout

block content
  .jobs
    for job in jobArray
      div(id="job_#{job.id}",class="job #{ job.status }",style=((jobArray.length>3)?'float: left; width: 50%; height: ' + (200/( ( jobArray.length % 2 == 1 ) ? jobArray.length + 1 : jobArray.length )) + '%;' : 'width: 100%; height: ' + (100/jobArray.length) + '%;'))
        #jobContent.content
          - if(job.url)
            h1 
              a(href=job.url,id='name_#{job.id}')= job.name
          - else
            h1(id='name_#{job.id}')= job.name
          - if(job.timestamp)
            div(id="timestamp_#{job.id}",class="timestamp")= job.timestamp
          - if(job.msg2)
            a(href='/detail/' + job.id,id='msg_' + job.id)!= job.msg
            ...
          - else
            p(id='msg_' + job.id)!= job.msg
